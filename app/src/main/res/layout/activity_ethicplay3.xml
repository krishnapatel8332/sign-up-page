<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient1"
    android:layout_height="match_parent"
    tools:context=".ethicplay3">
  <TextView
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:text="Welcome"
      android:textSize="50sp"
      android:layout_marginTop="24dp"
      android:paddingStart="15dp"
      android:textColor="#d55560"
      android:textStyle="bold"
      />
  <TextView
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:text="back!"
      android:textSize="50sp"
      android:paddingStart="15dp"
      android:textColor="#262626"
      android:textStyle="bold"
      />
  <TextView
      android:layout_width="match_parent"
      android:paddingHorizontal="15dp"
      android:layout_marginTop="5dp"
      android:layout_height="60dp"
      android:textSize="18sp"
      android:gravity="center"
      android:textStyle="bold"
      android:text="Signin to unlock exclusive benefits and take your gaming experience to next level ! "
      />

  <ImageView
      android:layout_gravity="center"
      android:layout_width="200dp"
      android:layout_marginTop="18dp"
      android:layout_height="200dp"
    android:src="@drawable/undraw_undraw_undraw_undraw_sign_up_ln1s__1__s4bc__1__ee41__1__kf4d"/>
  <com.google.android.material.textfield.TextInputLayout
      android:layout_width="match_parent"
      android:layout_marginTop="10dp"
      android:layout_height="60dp">
    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="10dp"
        android:textColor="@color/black"
        android:drawableStart="@drawable/baseline_mail_outline_24"
        android:hint="@string/enter_your_mail_phone_number"/>

  </com.google.android.material.textfield.TextInputLayout>
  <com.google.android.material.textfield.TextInputLayout
      android:layout_width="match_parent"
      android:layout_marginTop="15dp"
      app:passwordToggleEnabled="true"
      android:layout_height="60dp">
    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@color/black"
        android:inputType="textPassword"
        android:layout_marginHorizontal="10dp"
        android:drawableStart="@drawable/baseline_lock_24"
        android:hint="Enter your password"/>

  </com.google.android.material.textfield.TextInputLayout>

  <Button
      android:layout_width="match_parent"
      android:layout_marginTop="35dp"
      android:layout_height="60dp"
      android:text="Sign in"
      android:textStyle="bold"
      android:backgroundTint="#d3393c"
      android:layout_marginHorizontal="15dp"/>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:layout_marginTop="35dp"
      android:layout_marginLeft="50dp"
      android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Don't have an account?"
        android:textSize="15sp"
        android:textColor="#6D6B6B"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Create an account"
        android:id="@+id/create"
        android:textSize="15sp"
        android:layout_marginLeft="5dp"
        android:textStyle="bold"
        android:textColor="#d3393c"/>


  </LinearLayout>


</LinearLayout>