<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:background="@drawable/gradient1"
    android:layout_marginLeft="0dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ethicplay2">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/hello"
        android:textSize="50sp"
        android:layout_marginTop="30dp"
        android:paddingStart="15dp"
        android:textColor="#d55560"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="there!"
        android:textSize="50sp"
        android:paddingStart="15dp"
        android:textColor="#262626"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="match_parent"
       android:paddingHorizontal="15dp"
        android:layout_marginTop="5dp"
        android:layout_height="50dp"
        android:textStyle="bold"
        android:text="Create an account to unlock exclusive benefits and take your gaming experience to next level ! "
        />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="60dp">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:textColor="@color/black"
            android:drawableStart="@drawable/baseline_mail_outline_24"
            android:hint="@string/enter_your_mail_phone_number"/>

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        app:passwordToggleEnabled="true"
        android:layout_height="60dp">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:inputType="textPassword"
            android:layout_marginHorizontal="10dp"
            android:drawableStart="@drawable/baseline_lock_24"
            android:hint="Create password"/>

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        app:passwordToggleEnabled="true"
        android:layout_height="60dp">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:inputType="textPassword"
            android:layout_marginHorizontal="10dp"
            android:drawableStart="@drawable/baseline_lock_24"
            android:hint="Re-type password"/>

    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_marginTop="25dp"
        android:layout_height="60dp"
        android:text="Sign up"
        android:backgroundTint="#d3393c"
       android:layout_marginHorizontal="15dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_height="20dp"
        android:orientation="horizontal">
    <View
        android:layout_width="160dp"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="20dp"
        android:background="#B6B1B1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:text="Or"/>
        <View
            android:layout_width="150dp"
            android:layout_height="1dp"
            android:layout_marginHorizontal="20dp"
            android:background="#B6B1B1"/>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="60dp"
        app:cardBackgroundColor="#EBE9E9"
        app:cardCornerRadius="50dp"
        android:layout_marginHorizontal="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="60dp"
                android:layout_marginStart="70dp"
                android:layout_height="wrap_content"
                android:src="@drawable/google"/>
           <TextView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_marginTop="15dp"
               android:textStyle="bold"
               android:textSize="20sp"
               android:text="sign up using Google"
               />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Already have an account?"
            android:textSize="18sp"
            android:layout_marginLeft="60dp"
            android:textColor="#6D6B6B"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Sign in"
            android:textSize="18sp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:textColor="#d3393c"/>


    </LinearLayout>

</LinearLayout>